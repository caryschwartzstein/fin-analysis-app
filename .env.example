# Financial Analysis API - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# Schwab OAuth Configuration
# ============================================================================
# Get these from: https://developer.schwab.com/
SCHWAB_APP_KEY=your_schwab_app_key_here
SCHWAB_APP_SECRET=your_schwab_app_secret_here
SCHWAB_REDIRECT_URI=https://127.0.0.1:8000/api/v1/oauth/callback

# Generate encryption key with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
SCHWAB_ENCRYPTION_KEY=your_generated_fernet_key_here

# ============================================================================
# Data Provider API Keys
# ============================================================================
# Alpha Vantage (free tier: 25 requests/day)
# Get free API key from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Polygon.io (optional - requires paid subscription)
# Get API key from: https://polygon.io/
POLYGON_API_KEY=your_polygon_api_key_here

# ============================================================================
# Application URLs (NO HARDCODED DEFAULTS!)
# ============================================================================
# Frontend URL for OAuth redirects
FRONTEND_URL=http://localhost:5173

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:8000

# ============================================================================
# Provider Configuration
# ============================================================================
# Default data provider: yfinance, alphavantage, or polygon
# If not set, defaults to yfinance (free, no API key required)
DEFAULT_PROVIDER=yfinance

# Enable automatic fallback to yfinance on errors
ENABLE_FALLBACK=true
